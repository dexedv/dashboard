generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  passwordHash    String
  name            String
  role            String    @default("USER") // ADMIN | USER
  active          Boolean   @default(true)
  phone           String?
  birthday        DateTime?
  employeeNumber  Int       @unique @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  notes         Note[]
  calendarEvents CalendarEvent[]
  customers     Customer[]
  orders        Order[]
  files         File[]
  spotifyToken  SpotifyToken?
  refreshTokens RefreshToken[]
  permissions   UserPermission[]
  emailAccount  EmailAccount?
}

model Note {
  id        String   @id @default(uuid())
  userId    String
  title     String
  content   String   @default("")
  tags      String   @default("[]") // JSON array stored as string
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CalendarEvent {
  id              String   @id @default(uuid())
  userId          String
  orderId         String?
  title           String
  description     String?
  location        String?
  startAt         DateTime
  endAt           DateTime
  reminderMinutes Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  order Order? @relation(fields: [orderId], references: [id], onDelete: SetNull)
}

model Customer {
  id        String   @id @default(uuid())
  userId    String
  name      String
  email     String?
  phone     String?
  address   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]
  files  File[]
}

model Order {
  id                   String    @id @default(uuid())
  customerId           String
  userId               String
  title                String
  description          String?
  status               String    @default("NEW") // NEW, IN_PROGRESS, WAITING_MATERIAL, DONE, SHIPPED, CANCELED
  dueDate              DateTime?
  promisedDeliveryDate DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  customer   Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id])
  events     OrderEvent[]
  files      File[]
  calendarEvents CalendarEvent[]
}

model OrderEvent {
  id        String   @id @default(uuid())
  orderId   String
  type      String   // STATUS_CHANGE, NOTE, FILE_ADDED, CONTACT
  note      String
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model File {
  id           String   @id @default(uuid())
  ownerUserId  String
  customerId   String?
  orderId      String?
  filename     String
  originalName String
  mimeType     String
  size         Int
  path         String
  createdAt    DateTime @default(now())

  ownerUser User      @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  customer  Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  order     Order?    @relation(fields: [orderId], references: [id], onDelete: SetNull)
}

model SpotifyToken {
  id           String   @id @default(uuid())
  userId       String   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Permission {
  id          String   @id @default(uuid())
  name        String   @unique // Z.B. "orders.create"
  description String   // Z.B. "Auftr√§ge erstellen"
  category    String   // Z.B. "orders", "customers", "employees"
  users       UserPermission[]
}

model UserPermission {
  userId       String
  permissionId String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([userId, permissionId])
}

model EmailAccount {
  id           String   @id @default(uuid())
  userId       String   @unique
  email        String
  imapHost     String
  imapPort     Int      @default(993)
  imapSecure   Boolean  @default(true)
  smtpHost     String
  smtpPort     Int      @default(465)
  smtpSecure   Boolean  @default(true)
  username     String
  password     String   // Encrypted
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// WhatsApp Models
model WhatsAppConversation {
  id              String   @id @default(uuid())
  phoneNumber     String
  name            String?
  lastMessage     String?
  lastMessageAt   DateTime?
  unreadCount     Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  messages WhatsAppMessage[]
}

model WhatsAppMessage {
  id             String   @id @default(uuid())
  conversationId String
  messageId      String?  // WhatsApp message ID
  fromMe         Boolean
  body           String
  status         String   @default("sent") // sent, delivered, read, failed
  timestamp       DateTime
  createdAt      DateTime @default(now())

  conversation WhatsAppConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model WhatsAppConfig {
  id           String   @id @default(uuid())
  phoneNumberId String  @unique
  accessToken  String
  businessId   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// License Model
model License {
  id           String   @id @default(uuid())
  key          String   @unique
  customerId   String
  customerName String
  expiresAt    DateTime
  maxUsers     Int      @default(5)
  features     String   @default("[]") // JSON array as string
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
